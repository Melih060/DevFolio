﻿@model DevFolio.Models.TblAbout
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda  Güncelle</h2>

<br />
<div class="container">

    @using (Html.BeginForm("UpdateAbout", "About", FormMethod.Post))
    {
    <form class="form-group" method="post">
        @Html.HiddenFor(x => x.AboutId)

      
        <label>Açıklama</label>
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows=6 })
        <br />

        <button class="btn btn-primary">Kaydet</button>
    </form>

    }

</div>
