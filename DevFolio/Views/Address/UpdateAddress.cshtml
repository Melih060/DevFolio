﻿@model DevFolio.Models.TblAdress
@{
    ViewBag.Title = "UpdateAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Adres Güncelle</h2>

<br />
<div class="container">

    @using (Html.BeginForm("UpdateAddress", "Address", FormMethod.Post))
    {
        <form class="form-group" method="post">
            <label>Açıklama</label>
            @Html.HiddenFor(x => x.AdressID)
            @Html.TextAreaFor(x => x.Description,new { @class = "form-control", rows = 2 })
            <br/>
            <label>Adres</label>
           @Html.TextBoxFor(x => x.Location, new { @class = "form-control" } )
            <br />
            <label>Email</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            <br />
            <label>Telefon</label>
            @Html.TextBoxFor(x => x.Phonenumber, new { @class = "form-control" })
            <br />

            <button class="btn btn-primary">Güncelle</button>
        </form>

    }

</div>
