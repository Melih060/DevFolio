﻿@model DevFolio.Models.TblSocialMedia
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Sosyal Medya Güncelle</h2>

<br />
<div class="container">

    @using (Html.BeginForm("UpdateSocialMedia", "SocialMedia", FormMethod.Post))
    {
        <form class="form-group" method="post">
            @Html.HiddenFor(x => x.SocialMediaId)
            @Html.HiddenFor(x => x.Status)
            <label>Platform Adı</label>
            @Html.TextAreaFor(x => x.PlatformName, new { @class = "form-control" })
            <br />
            <label>Simge Adresi</label>
            @Html.TextAreaFor(x => x.İconUrl, new { @class = "form-control" })
            <br />
            <label>Hesap Adresi</label>
            @Html.TextAreaFor(x => x.RedierectUrl, new { @class = "form-control" })
            <br />

            <button class="btn btn-primary">Güncelle</button>
        </form>

    }

</div>