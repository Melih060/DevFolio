﻿@model List<DevFolio.Models.TblAbout>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda</h2>

<div class="container">
    <a href="/About/CreateAbout/" class="btn btn-info">Açıklama Oluştur</a>
    <br />
    <br />
    <table class="table table-bordered">
        <tr class="table-secondary">
            <th>#</th>
            <th>Açıklama</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {
   
           
            <tr>
                <td>@item.AboutId</td>
                <td>@item.Description</td>
                
                
                <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-warning">Sil</a></td>
                <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }


    </table>
</div>