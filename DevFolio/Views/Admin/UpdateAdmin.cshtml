@model DevFolio.Models.TblAdmin
@{
    ViewBag.Title = "UpdateAdmin";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yönetici Güncelle</h2>

<br />
<div class="container">

    @using (Html.BeginForm("UpdateAdmin", "Admin", FormMethod.Post))
    {
        <form class="form-group" method="post">
            @Html.HiddenFor(x => x.AdminID)

            <label>Kullanıcı Adı</label>

            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
            <br />
            <label>Şifre</label>
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
            <br />

            <button class="btn btn-primary">Güncelle</button>
        </form>

    }

</div>

